<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragmentProductList">

    <fragment
        android:id="@+id/fragmentProductList"
        android:name="com.example.shop.UI.Fragment.product.FragmentProductList"
        android:label="fragment_product_list"
        tools:layout="@layout/fragment_product_list" >
        <action
            android:id="@+id/action_fragmentProductList_to_fragmentProductDetail"
            app:destination="@id/fragmentProductDetail" />
    </fragment>

    <fragment
        android:id="@+id/fragmentProductDetail"
        android:name="com.example.shop.UI.Fragment.product.detail.FragmentProductDetail"
        android:label="fragment_product_detail"
        tools:layout="@layout/fragment_product_detail" >
        <argument
            android:name="productId"
            app:argType="integer" />
    </fragment>

</navigation>
